<html>
<head>
    @model List<Usuario>
    @{
        ViewData["Title"] = "User List with JS";
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <h1>User List</h1>
    <div id="user-list">
        @*Card gerado automaticamente aqui!*@
    </div>
    <div class="centro">
        <button id="add-user-btn" class="meu-botao">Add New</button>
    </div>
    <div class="modal" id="infoModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center justify-content-center" id="modal-body">
                </div>
            </div>
        </div>
    </div>

    <script src="script.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
</body>
</html>