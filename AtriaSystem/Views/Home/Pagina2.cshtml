<html>
<head>
    @model List<Usuario>
    @{
        ViewData["Title"] = "User List with C#";
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <a class="btn btn-outline-success d-flex align-items-center justify-content-center m-3 w-25"
           href="@Url.Action("Pagina2","Home",new {amountProfile = true})">Add New</a>
    <div class="d-flex align-items-center justify-content-center">
           <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <a href="#" class="text-decoration-none" style="color:black;" onclick="mostrarInfoModal('@item.Foto','@item.Nome', '@item.Sobrenome', '@item.Telefone', '@item.DataNascimento.ToShortDateString()', '@item.Sexo')">
                    <div class="card" style="width: 18rem;">
                        <img src="@item.Foto" class="card-img-top" alt="">
                        <div class="card-body">
                            <label style="opacity: 0.5">Name</label>
                            <p class="card-text">@item.Nome @item.Sobrenome</p>
                            <label style="opacity: 0.5">Phone</label>
                            <p><i class="fas fa-phone"></i> @item.Telefone</p>
                            <label style="opacity: 0.5">Birthday Date</label>
                            <p><i class="fas fa-birthday-cake"></i> @item.DataNascimento.ToShortDateString()</p>
                            <label style="opacity: 0.5">Genre</label>
                            <p>
                                <i class="fas
                        @{
                        if(item.Sexo == "male")
                        {
                                @("fa-mars")
;
                        }
                        else
                        {
                                @("fa-venus")
;
                        }
                        }"></i> @item.Sexo
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
        </div>
    </div>

    <div class="modal" id="infoModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center justify-content-center" id="modal-body">
                </div>
            </div>
        </div>
    </div>
</body>
</html>